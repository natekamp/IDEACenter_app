<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/nav_profile_picture"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/nav_divider"
        android:layout_margin="10dp"
        android:src="@drawable/profile_picture"
        app:civ_border_color="@color/colorPrimaryDark"
        app:civ_border_width="2dp"/>

    <TextView
        android:id="@+id/nav_username"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        app:layout_constraintStart_toEndOf="@id/nav_profile_picture"
        app:layout_constraintTop_toTopOf="@id/nav_profile_picture"
        app:layout_constraintBottom_toBottomOf="@id/nav_profile_picture"
        android:layout_marginStart="10dp"
        android:text="username"
        android:textAlignment="viewStart"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="16sp"
        android:textStyle="bold"/>

    <ImageView
        android:id="@+id/nav_logo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/nav_divider"
        android:layout_margin="10dp"
        android:src="@drawable/idea_app_icon"/>

    <View
        android:id="@+id/nav_divider"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_margin="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nav_profile_picture"
        android:background="@color/colorPrimaryDark"/>

</android.support.constraint.ConstraintLayout>